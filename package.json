{
  "name": "luminous-quotes",
  "version": "1.0.0",
  "private": true,
  "description": "Create beautiful quote images with stunning backgrounds and premium typography",
  "author": "Kaan",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev:*",
    "dev:client": "vite",
    "dev:server": "bun --watch server/index.ts",
    "build": "tsc -b && vite build",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "preview": "vite preview",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "drizzle-kit": "^0.31.8",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  },
  "keywords": [
    "quotes",
    "wallpaper",
    "typography",
    "react",
    "bun",
    "hono"
  ]
}
